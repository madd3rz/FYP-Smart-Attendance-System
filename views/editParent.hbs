<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">{{ pageTitle }}</h1>
</div>

<div class="container">
  <div class="card-deck mb-3">
    <div class="card mb-4 box-shadow">
      <div class="card-header text-left">
        <a class="my-0 font-weight-normal">Enter Details</a>
      </div>
      <div class="card-body">
        <form id="searchParent" action="/edit-search-parent" method="GET" novalidate="">
          <div class="form-row ">
            <div class="form-group col-md-5">
              <input type="text" class="form-control" id="parentName" name="searchParentName"
                placeholder="Search Parent Name Here">
            </div>
            <div class="col-auto ">
              <button type="submit" class="btn btn-primary btn-sm p-2 ml-5 float-right"> Search</button>
            </div>
            {{#if errorMessage}}
            <div id="alert" class="form-row alert alert-danger px-4 ml-5 text-center" role="alert">
              {{errorMessage}}
            </div>
            {{/if}}
            {{#if infoMessage}}
            <div id="info" class="form-row alert alert-success px-4 ml-5 text-center" role="alert">
              {{infoMessage}}
            </div>
            {{/if}}
          </div>
        </form>
        <form id="editParentForm" action="/edit-parent" method="POST" novalidate="">
          <div class="form-group">
            <label for="inputName">Parent Name</label>
            <input type="text" class="form-control" id="parentName" name="parentName" placeholder="Edit name here"
              value="{{ oldInput.name }}">
          </div>
          <div class="form-group">
            <label for="inputEmail">Parent Email Address</label>
            <input type="email" class="form-control" id="parentEmail" name="parentEmail"
              placeholder="johndoe@example.com" value="{{oldInput.email}}">
          </div>
          <input type="hidden" value="{{csrfToken}}" name="_csrf">
          <button type="submit" class="btn btn-primary btn-lg float-right">&#9745; Edit Parent</button>
        </form>
      </div>
    </div>
  </div>

  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="row">
      <div class="col-12 col-md">
        <img class="mb-2" src="/images/logo.png" alt="" width="24" height="24">
        <small class="d-block mb-3 text-muted"> Smart Attendance System &copy; 2022</small>
      </div>
    </div>
  </footer>
</div>