<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">{{ pageTitle }}</h1>
</div>

<div class="container">
  <div class="card-deck mb-3">
    <div class="card mb-4 box-shadow">
      <div class="card-header text-left">
        <a class="my-0 font-weight-normal">Enter Details</a>
      </div>
      <div class="card-body">
        <form id="searchStudent" action="/edit-search-student" method="GET" novalidate="">
          <div class="form-row ">
            <div class="form-group col-md-5">
              <input type="text" class="form-control" id="studentName" name="searchStudentName"
                placeholder="Search by Student Name Here">
            </div>
            <div class="form-group input-group-sm">
              <span class="input-group-text col-sm-auto"> OR </span>
            </div>
            <div class="form-group col-md-3">
              <input type="text" class="form-control" id="studentID" name="searchStudentID"
                placeholder="Search by Student ID Here">
            </div>
            <div class="col-auto ">
              <button type="submit" class="btn btn-primary btn-sm p-2 ml-5 float-right"> Search</button>
            </div>
          </div>
        </form>
        {{#if errorMessage}}
        <div id="alert" class="form-row alert alert-danger px-4  text-center" role="alert">
          {{errorMessage}}
        </div>
        {{/if}}
        {{#if infoMessage}}
        <div id="info" class="form-row alert alert-success px-4 text-center" role="alert">
          {{infoMessage}}
        </div>
        {{/if}}
        <form id="editStudentForm" action="/edit-student" method="POST" novalidate="">
          <div class="form-row">
            <div class="form-group col-md-8">
              <label for="inputName">Name</label>
              <input type="text" class="form-control" id="studentName" name="studentName" placeholder="Student Full Name"
                value="{{oldInput.name}}" required>
            </div>
            <div class="form-group col-md">
              <label for="inputClass">Class</label>
              <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                <option selected>Choose...</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName">Parent Name</label>
            <input type="text" class="form-control" id="parentName" name="parentName" value="{{oldInput.parentName}}"
              placeholder="Choose...">
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputID">Student ID</label>
              <input type="text" class="form-control" value="{{oldInput.StudentID}}" id="studentID" name="studentID">
            </div>
            <div class="form-group col-md">
              <label for="inputRFID">RFID code</label>
              <input type="text" class="form-control" value="{{oldInput.RFIDcode}}" id="RFIDcode" name="RFIDcode">
            </div>
          </div>
          <input type="hidden" value="{{csrfToken}}" name="_csrf">
          <button type="submit" class="btn btn-primary btn-lg float-right">&#9745; Edit Student</button>
        </form>
      </div>
    </div>
  </div>

  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="row">
      <div class="col-12 col-md">
        <img class="mb-2" src="/images/logo.png" alt="" width="24" height="24">
        <small class="d-block mb-3 text-muted"> Smart Attendance System &copy; 2022</small>
      </div>
    </div>
  </footer>
</div>