<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Welcome {{ displayName }} </h1>
  <p>Parent Home</p>
</div>

<div class="container">

  <div class="card-body">
    <div class="table-responsive-xl row justify-content-center ">
      <table class="table table-striped table-hover text-center">
        {{#if infoMessage}}
        <div id="info" class="text-muted alert alert-success px-4 ml-5 text-center" role="alert">
          {{{infoMessage}}}
        </div>
        {{/if}}
        <thead>
          <tr>
            {{{ thead }}}
          </tr>
        </thead>
        <tbody>
          {{{ tbody }}}
        </tbody>
      </table>
    </div>
  </div>

  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="row">
      <div class="col-12 col-md">
        <img class="mb-2" src="/images/logo.png" alt="" width="24" height="24">
        <small class="d-block mb-3 text-muted"> Smart Attendance System &copy; 2022</small>
      </div>
    </div>
  </footer>
</div>