  <div class="button-group text-center">
    {{#if errorMessage}}
    <div id="alert" class="form-row alert alert-danger px-4 ml-5 text-center" role="alert">
      {{errorMessage}}
    </div>
    {{/if}}
    {{#if infoMessage}}
    <div id="info" class="form-row alert alert-success px-4 ml-5 text-center" role="alert">
      {{infoMessage}}
    </div>
    {{/if}}
    <a class="btn btn-primary btn-lg m-3 mr-4 p-3" href="/daily-report" role="button">Daily Report</a>
    <a class="btn btn-primary btn-lg m-3 mr-4 p-3" href="/weekly-report" role="button">Weekly Report</a>
    <a class="btn btn-primary btn-lg m-3 mr-4 p-3" href="/monthly-report" role="button">Monthly Report</a>
  </div>
