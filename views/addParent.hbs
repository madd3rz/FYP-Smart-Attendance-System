<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">{{ pageTitle }}</h1>
</div>

<div class="container">
  <div class="card-deck mb-3">
    <div class="card mb-4 box-shadow">
      <div class="card-header text-left">
        <a class="my-0 font-weight-normal">Enter Details</a>
      </div>
      <div class="card-body">
        {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">
          {{errorMessage}}
        </div>
        {{/if}}
        <form id="addParentForm" action="/add-parent" method="POST" novalidate="">
          <div class="form-row">
            <div class="form-group col-md">
              <label for="inputName">Parent Name</label>
              <input type="text" class="form-control" id="parentName" name="parentName" placeholder="Parent Full Name"
                value="{{oldInput.name}}" required>
              <input type="hidden" value="{{csrfToken}}" name="_csrf">
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail">Parent Email Address</label>
            <input type="email" class="form-control" id="parentEmail" name="parentEmail"
              placeholder="johndoe@example.com" value="{{oldInput.email}}" required>
          </div>
          <button type="submit" class="btn btn-primary btn-lg float-right">&#9745; Add Parent</button>
        </form>

      </div>
    </div>
  </div>

  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="row">
      <div class="col-12 col-md">
        <img class="mb-2" src="/images/logo.png" alt="" width="24" height="24">
        <small class="d-block mb-3 text-muted"> Smart Attendance System &copy; 2022</small>
      </div>
    </div>
  </footer>
</div>