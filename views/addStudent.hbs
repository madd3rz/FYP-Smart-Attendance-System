<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">{{ pageTitle }}</h1>
</div>

<div class="container">
  <div class="card-deck mb-3">
    <div class="card mb-4 box-shadow">
      <div class="card-header text-left">
        <a class="my-0 font-weight-normal">Enter Details</a>
      </div>
      <div class="card-body">
        {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">
          {{errorMessage}}
        </div>
        {{/if}}
        <form id="addStudentForm" action="/add-student" method="POST">
          <div class="form-row">
            <div class="form-group col-md-8">
              <label for="inputName">Name</label>
              <input type="text" class="form-control is-invalid" id="studentName" name="studentName" value="{{oldInput.name}}"
                placeholder="Student Full Name" required >
              <input type="hidden" value="{{csrfToken}}" name="_csrf">
              <div class="invalid-feedback">
                What's the student's name?
              </div>
            </div>
            <div class="form-group col-md">
              <label for="inputClass">Class</label>
              <input type="text" class="form-control is-invalid" id="studentClass" name="studentClass" value="{{oldInput.class}}"
                placeholder="Student Class" required>
              <div class="invalid-feedback">
                What's the student's class?
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName">Parent Name</label>
            <select class="custom-select form-control" id="parentName" name="parentName">
              {{{ selection }}}
            </select>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputID">Student ID</label>
              <input type="text" class="form-control is-invalid" id="studentID" name="studentID" value="{{oldInput.studentid}}"
                placeholder="Enter Student ID here" required>
              <div class="invalid-feedback">
                What's the student's ID number?
              </div>
            </div>
            <div class="form-group col-md">
              <label for="inputRFID">RFID code</label>
              <input type="text" class="form-control is-invalid" id="RFIDcode" name="RFIDcode" value="{{oldInput.rfid}}"
                placeholder="Enter Student RFID code here" required>
              <div class="invalid-feedback">
                What's the student's RFID tag code?
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary btn-lg float-right" id="btnSubmit">&#9745; Add Student</button>
        </form>
      </div>
    </div>
  </div>

  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="row">
      <div class="col-12 col-md">
        <img class="mb-2" src="/images/logo.png" alt="" width="24" height="24">
        <small class="d-block mb-3 text-muted"> Smart Attendance System &copy; 2022</small>
      </div>
    </div>
  </footer>
</div>