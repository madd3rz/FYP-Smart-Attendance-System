<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">{{ pageTitle }}</h1>
</div>

<div class="container-fluid">
    <div class="card-body">
        <form id="searchFilter" action="/view-search-filter" method="GET" novalidate="">
            <div class="form-row ">
                <div class="form-group col-md">
                    <div class="input-group date">
                        <input type="text" class="form-control" name="datePicker" placeholder="Select date here" value="{{oldInput.datePicker}}"><span
                            class="input-group-prepend"><i class="glyphicon glyphicon-th"></i></span>
                    </div>
                    <script>
                        $('.input-group.date').datepicker({
                            todayBtn: true,
                            autoclose: true,
                            todayHighlight: true,
                            format: 'yyyy-mm-dd'
                        });
                    </script>
                </div>
                <div class="form-group col-md">
                    <input type="text" class="form-control" id="studentName" name="studentName" value="{{oldInput.studentName}}" 
                        placeholder="Search by Student Name Here">
                </div>
                <div class="form-group col-md">
                    <input type="text" class="form-control" id="studentID" name="studentID" value="{{oldInput.studentID}}" 
                        placeholder="Search by Student ID Here">
                </div>
                <div class="form-group col-md">
                    <input type="text" class="form-control" id="studentClass" name="studentClass" value="{{oldInput.studentClass}}" 
                        placeholder="Search by Class Here">
                </div>
                <div class="col-auto ">
                    <button type="submit" class="btn btn-primary btn-sm p-2 ml-5 float-right"> Search</button>
                </div>
            </div>
        </form>
        {{#if errorMessage}}
        <div id="alert" class="form-row alert alert-danger px-4 ml-5 text-center" role="alert">
            {{errorMessage}}
        </div>
        {{/if}}
        {{#if infoMessage}}
        <div id="info" class="form-row alert alert-success px-4 ml-5 text-center" role="alert">
            {{infoMessage}}
        </div>
        {{/if}}
        <script src="/js/table-sort-js.js"></script>
        <div class="table-responsive-xl row justify-content-center ">
            <table class="table table-striped table-hover text-center table-sort table-arrows">
                <thead>
                    <tr>
                        {{{ thead }}}
                    </tr>
                </thead>
                <tbody>
                    {{{ tbody }}}
                </tbody>
            </table>
        </div>


    </div>

    <footer class="pt-4 my-md-5 pt-md-5 border-top">
        <div class="row">
            <div class="col-12 col-md">
                <img class="mb-2" src="/images/logo.png" alt="" width="24" height="24">
                <small class="d-block mb-3 text-muted"> Smart Attendance System &copy; 2022</small>
            </div>
        </div>
    </footer>
</div>